if command -v nvim &> /dev/null; then
  alias vim="nvim"
fi

if command -v lazygit &> /dev/null; then
  alias lg="lazygit"
fi

if command -v exa &> /dev/null; then
  alias l='exa'
  alias la='exa -a'
  alias ll='exa -lah'
  alias ls='exa --color=auto'
fi

if command -v bat &> /dev/null; then
  alias cat='bat --style=plain'
fi
